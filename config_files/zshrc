# FunciÃ³n para actualizar servidores en paralelo con detecciÃ³n de privilegios
upgrade-all() {
    # 1. ConfiguraciÃ³n de rutas (Expandimos HOME explÃ­citamente para evitar fallos con mkdir)
    local BASE_DIR="$HOME/logs_upgrade-all"
    local SUB_DIR="$(date +%Y-%m-%d_%H-%M-%S)"
    local FULL_PATH="$BASE_DIR/$SUB_DIR"
    local HOSTS="pveseg1 pveseg2 pveseg3 redteam iasrv"

    # 2. Comando remoto mejorado
    # Agregamos export DEBIAN_FRONTEND para que no se quede pegado esperando inputs
    local REMOTE_CMD='u_id=$(id -u); [ $u_id -eq 0 ] && s="" || s="sudo"; 
        export DEBIAN_FRONTEND=noninteractive;
        $s apt-get update && $s apt-get upgrade -y && $s apt-get autoclean && $s apt-get autoremove -y'

    # 3. Crear directorios
    mkdir -p "$FULL_PATH"

    print -P "\nðŸš€ Lanzando actualizaciÃ³n remota en: %F{cyan}$HOSTS%f"
    print -P "ðŸ“‚ Directorio de logs: %F{yellow}$FULL_PATH/%f"
    print -P "ðŸ“º %F{grey}Mostrando salida en tiempo real...%f\n"

    # 4. EjecuciÃ³n con pssh
    # -i: Muestra la salida estÃ¡ndar y error de cada host en la consola mientras ocurre
    # -t 0: Sin lÃ­mite de tiempo
    parallel-ssh -H "$HOSTS" -i -t 0 -o "$FULL_PATH" -e "$FULL_PATH" "$REMOTE_CMD"

    # 5. Resumen de resultados (al final de toda la verbosidad)
    print "\n======================================"
    print "         RESUMEN DE RESULTADOS"
    print "======================================"

    for host in ${(z)HOSTS}; do
        # Verificamos si el archivo de log existe y tiene contenido
        if [ -s "$FULL_PATH/$host" ]; then
            # Opcional: PodrÃ­as buscar errores fatales especÃ­ficos en el log aquÃ­
            print -P "âœ… %F{green}$host%f: EjecuciÃ³n terminada. Log: $FULL_PATH/$host"
        else
            print -P "âŒ %F{red}$host%f: ERROR (Sin respuesta o log vacÃ­o)"
        fi
    done
    print -P "======================================\n"
}

##Alias para identificar whois de un domino
#alias domaindata='read "d?Dominio a auditar: "; t=".${d##*.}"; s=$(whois -h whois.iana.org "$t" | grep "whois:" | awk '{print $2}'); [ -n "$s" ] && whois -h "$s" "$d" | grep -iE "Domain Name:|Creation Date:|Registry Expiry Date:|Registrar URL:|Name Server:" | sort -u || echo "Error: No se encontrÃ³ servidor para $t"'
domaindata() {
    local d t s
    read "d?Dominio a auditar: "
    t=".${d##*.}"
    s=$(whois -h whois.iana.org "$t" | grep "whois:" | awk '{print $2}')
    
    if [ -n "$s" ]; then
        whois -h "$s" "$d" | grep -iE "Domain Name:|Creation Date:|Registry Expiry Date:|Registrar URL:|Name Server:" | sort -u
    else
        echo "Error: No se encontrÃ³ servidor para $t"
    fi
}
